<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:hexa="urn:import:fr.lteconsulting.hexa.client.ui.widget">
    <ui:with type="fr.lteconsulting.hexa.client.css.bindings.BootstrapHexaCss"
             field="bs"></ui:with>

    <g:HTMLPanel stylePrimaryName="{bs.well}">
        <div class="{bs.panel} {bs.panelDefault}">
            <div class="{bs.panelHeading}">
                <h3 class="{bs.panelTitle}">Category</h3>
            </div>
            <div class="{bs.panelBody}">
                <form>
                    <div class="{bs.formGroup}">
                        <label>Name</label>
                        <g:TextBox ui:field="name" stylePrimaryName="{bs.formControl}"></g:TextBox>
                    </div>
                    <div class="{bs.formGroup}">
                        <label>Color</label>
                        <g:TextBox ui:field="color" stylePrimaryName="{bs.formControl}"></g:TextBox>
                    </div>
                </form>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder> 